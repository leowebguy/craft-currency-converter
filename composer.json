{
  "name": "leowebguy/craft-currency-converter",
  "description": "Craft plugin to convert currency using API & local storage",
  "keywords": [
    "craftcms",
    "currency",
    "convert",
    "converter"
  ],
  "version": "1.0.6",
  "type": "craft-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Leo",
      "homepage": "https://github.com/leowebguy"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "craftcms/cms": "^3.0|^4.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "leowebguy\\currencyconverter\\": "src/"
    }
  },
  "extra": {
    "name": "Currency Converter",
    "handle": "currency-converter",
    "hasCpSection": false,
    "hasCpSettings": true,
    "class": "leowebguy\\currencyconverter\\CurrencyConverter",
    "components": {
      "currencyConverterService": "leowebguy\\currencyconverter\\services\\CurrencyConverterService"
    }
  },
  "config": {
    "platform": {
      "php": "8.0.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "check-cs": "vendor/bin/ecs check src --ansi",
    "fix-cs": "vendor/bin/ecs check src --ansi --fix",
    "phpstan": "vendor/bin/phpstan analyse src"
  }
}
